<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.izv.dam.newquip.vistas.drawer.VistaDrawer"
    tools:showIn="@layout/activity_drawer">

    <view
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        class="com.izv.dam.newquip.vistas.drawer.Lienzo"
        android:id="@+id/lienzo"
        android:background="@color/blanco"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="6">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/colorverde"
            android:layout_weight="1"
            android:tag="#14c414"
            android:background="#14c414" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/colorrojo"
            android:layout_weight="1"
            android:tag="#d62121"
            android:background="#d62121" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/coloramarillo"
            android:layout_weight="1"
            android:tag="#FCFF2E"
            android:background="#FCFF2E" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/colorazul"
            android:layout_weight="1"
            android:tag="#1169ce"
            android:background="#1169ce" />


        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/colornegro"
            android:layout_weight="1"
            android:tag="#FF000000"
            android:background="#FF000000" />
    </LinearLayout>
</LinearLayout>
